		"webpack": "^5.24.4",
		"webpack-bundle-analyzer": "^4.4.0",
		"webpack-cli": "^4.5.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	},
	//NOTE core-js and workbox are production dependencies. They will be used in the browser.
